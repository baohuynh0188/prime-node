{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["node"]
    },
    "ts-node": {
        "esm": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
